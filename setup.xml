<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "../../dtd/setup.dtd">

<setup>
    <!--
    define all your parameters here which should be configurable via
    OSD and the skindesigner setup menu.
    Parameters must have type "bool" or "integer". For "bool" Parameters
    a choice yes/no is shown in the setup menu, a "integer" parameter
    can be configured to a value between "min" and "max". If "min" is not
    set, "0" is the minimum, if "max" is not set, "1000" is maximum.
    "displayname" is used to display the option in the setup menu.
    The configured parameter value is the default value.
    -->
    <menu>
		<!-- global parameter -->
		<parameter type="int" name="opacity" min="0" max="3" displaytext="{tr(opacity)}">0</parameter>
	
	<submenu name="dasboard" displaytext="{tr(dasboard)}">
	
			

		<parameter type="bool" name="diskUsage" displaytext="{tr(showDiskusage)}">1</parameter>
		<parameter type="bool" name="showShedule" displaytext="{tr(showShedule)}">1</parameter>
		<parameter type="bool" name="showSystem" displaytext="{tr(showSystem)}">1</parameter>
		<parameter type="bool" name="showTimers" displaytext="{tr(showTimers)}">1</parameter>
		<parameter type="bool" name="showClock" displaytext="{tr(showClock)}">1</parameter>

		<parameter type="bool" name="showWeather" displaytext="{tr(showWeather)}">1</parameter>
		<parameter type="bool" name="showIcon" displaytext="{tr(showIcon)}">1</parameter>
		<parameter type="bool" name="showSomething1" displaytext="{tr(showSomething1)}">1</parameter>
		<parameter type="bool" name="showSomething2" displaytext="{tr(showSomething2)}">1</parameter>
	<!--
		<submenu name="_experimental" displaytext="{tr(_experimental)}">
				<parameter type="int" name="timerPosX" min="44" max="63" displaytext="{tr(timerPosX)}">0</parameter>
				<parameter type="int" name="timerPosY" min="10" max="65" displaytext="{tr(timerPosY)}">0</parameter>
		
				<parameter type="int" name="weatherPosX" min="44" max="63" displaytext="{tr(weatherPosX)}">0</parameter>
				<parameter type="int" name="weatherPosY" min="10" max="65" displaytext="{tr(weatherPosY)}">0</parameter>
			
		</submenu>			
	-->	
	
	</submenu>	
	
	<submenu name="displaychannel" displaytext="{tr(displaychannel)}">
			<parameter type="bool" name="showSignal" displaytext="{tr(showSignal)}">1</parameter>
			<parameter type="bool" name="showBannerChannel" displaytext="{tr(showBannerChannel)}">1</parameter>
			<parameter type="bool" name="showPosterChannel" displaytext="{tr(showPosterChannel)}">1</parameter>
	</submenu>
	<submenu name="displayreplay" displaytext="{tr(displayreplay)}">
			<parameter type="bool" name="showPosterReplay" displaytext="{tr(showPosterReplay)}">1</parameter>
			<parameter type="bool" name="showBannerReplay" displaytext="{tr(showBannerReplay)}">1</parameter>
	</submenu>	
	
		<submenu name="details" displaytext="{tr(details)}">
				
		<parameter type="bool" name="showDetailShedule" displaytext="{tr(showDetailShedule)}">1</parameter>
		<parameter type="bool" name="showDetailChannels" displaytext="{tr(showDetailChannels)}">1</parameter>
		<parameter type="bool" name="showDetailTimers" displaytext="{tr(showDetailTimers)}">1</parameter>
		<parameter type="bool" name="showDetailRecordings" displaytext="{tr(showDetailRecordings)}">1</parameter>
	</submenu>
		
		
		</menu>

